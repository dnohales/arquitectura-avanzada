{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <ul class="form-errors">
        {% for error in errors %}
            <li>{{ error.message }}</li>
        {% endfor %}
    </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block checkbox_row %}
{% spaceless %}
<div>
    {{ form_errors(form) }}
    <label class="checkbox">
        {{ form_widget(form) }} {{ form.vars.label }}
    </label>
</div>
{% endspaceless %}
{% endblock %}